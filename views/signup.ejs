<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include("partials/header.ejs") %>
    <title>Create Account</title>

    <style>
      .auth-card {
        max-width: 440px;
        margin: auto;
        padding: 28px;
        border-radius: 12px;
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.12);
      }

      .auth-title {
        font-weight: 600;
        margin-bottom: 8px;
        text-align: center;
      }

      .auth-subtitle {
        font-size: 0.9rem;
        color: #6c757d;
        text-align: center;
        margin-bottom: 20px;
      }

      .future-feature {
        font-size: 0.8rem;
        color: #adb5bd;
      }

      .password-hint {
        font-size: 0.8rem;
        color: #6c757d;
      }
    </style>
  </head>

  <body>
    <%- include("partials/navbar.ejs") %>

    <div class="container mt-5">
      <div class="auth-card bg-white">

        <h3 class="auth-title">Create your account ðŸš€</h3>
        <p class="auth-subtitle">
          Start writing and sharing your blogs
        </p>

        <form action="/user/signup" method="POST">
          <div class="mb-3">
            <label class="form-label">Full name</label>
            <input
              type="text"
              name="fullname"
              class="form-control"
              placeholder="John Doe"
              required
            />
          </div>

          <div class="mb-3">
            <label class="form-label">Email address</label>
            <input
              type="email"
              name="email"
              class="form-control"
              placeholder="you@example.com"
              required
            />
          </div>

          <div class="mb-3">
            <label class="form-label">Password</label>
            <input
              type="password"
              name="password"
              class="form-control"
              placeholder="Create a strong password"
              required
            />
            <div class="password-hint">
              Must be at least 8 characters
              <span class="future-feature">(Next Feature)</span>
            </div>
          </div>

          <div class="form-check mb-3">
            <input class="form-check-input" type="checkbox" disabled />
            <label class="form-check-label">
              I agree to the Terms & Privacy Policy
              <span class="future-feature">(Next Feature)</span>
            </label>
          </div>

          <button class="btn btn-primary w-100 mb-3">
            Create Account
          </button>
        </form>

        <p class="text-center small mb-0">
          Already have an account?
          <a href="/user/signin" class="text-decoration-none">
            Sign in
          </a>
        </p>

        <hr class="my-4" />

        <button class="btn btn-outline-secondary w-100 mb-2" disabled>
          Sign up with Google
          <span class="future-feature">(Next Feature)</span>
        </button>

        <button class="btn btn-outline-secondary w-100" disabled>
          Sign up with GitHub
          <span class="future-feature">(Next Feature)</span>
        </button>

      </div>
    </div>

    <%- include("partials/script.ejs") %>
  </body>
</html>
