<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include("partials/header.ejs") %>

    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Blog App</title>

    <style>
      /* Blog Card */
      .blog-card-img {
        height: 200px;
        object-fit: cover;
      }

      .blog-card {
        border-radius: 12px;
        overflow: hidden;
        box-shadow: 0 6px 18px rgba(0, 0, 0, 0.12);
        transition: transform 0.25s ease, box-shadow 0.25s ease;
        position: relative;
        background: #fff;
      }

      .blog-card:hover {
        transform: translateY(-4px);
        box-shadow: 0 10px 26px rgba(0, 0, 0, 0.18);
      }

      .blog-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
        gap: 26px;
        margin-top: 30px;
      }

      /* Meta Info */
      .blog-meta {
        font-size: 0.85rem;
        color: #6c757d;
        display: flex;
        justify-content: space-between;
        margin-bottom: 8px;
      }


      .container {
        max-width: 1200px;
      }
      
      .btn {
        transition: all 0.2s ease;
      }
      
      .btn:hover {
        transform: translateY(-1px);
      }
    </style>
  </head>

  <body>
    
    <%- include("partials/navbar.ejs") %>
       
    <!-- Top Controls -->
 <div class="d-flex justify-content-between align-items-center flex-wrap">
  <div>
    <h2 class="fw-bold mb-3">Latest Blogs</h2>
    <p class="text-muted mt-1 mb-0">
      Discover articles from the community
    </p>
  </div>

  <div class="d-flex gap-2 align-items-center">
    <% if (locals.user) { %>
      <a
        href="/blog/add-new"
        class="btn btn-primary"
        style="background: linear-gradient(135deg, #bc351d, #6610f2); border: none;"
      >
        ‚úçÔ∏è Create Blog
      </a>
    <% } else { %>
      <a
        href="/user/signin"
        class="btn btn-outline-primary"
      >
        Sign In to Create Blog
      </a>
    <% } %>
  </div>
</div>


    <!-- Blog Grid -->
    <div class="container">
      <div class="blog-grid">
        <% blog.forEach((blog) => { %>
          <div class="card blog-card">


            <% if (blog.coverImage) { %>
              <img
                src="<%= blog.coverImage %>"
                alt="Blog Image"
                class="blog-card-img"
                onerror="this.src='/images/image.png'"
              />
            <% } else { %>
              <img
                src="/images/image.png"
                alt="Blog Image"
                class="blog-card-img"
              />
            <% } %>

            <div class="card-body">
              <div class="blog-meta">
                <span>
                  By <strong><%= blog.createdBY?.fullname || "Author" %></strong>
                </span>
                <span>
                  <%= Math.ceil((blog.body?.length || 0) / 1000) || 1 %> min read
                </span>
              </div>

              <h5 class="card-title mb-2">
                <%= blog.title %>
              </h5>
                
              <p class="text-muted small mb-3">
                <%= blog.body ? (blog.body.split(".").slice(0, 1).join(".") + "...") : "No description available" %>
              </p>

              <div class="d-flex gap-2 flex-wrap">
                <a
                  href="/blog/<%= blog._id %>"
                  class="btn btn-primary flex-grow-1"
                >
                  Read More
                </a>
                
                <form action="/blog/<%= blog._id %>/like" method="POST" class="d-inline">
                  <button type="submit" class="btn btn-danger">
                    ‚ô• Like (<%= blog.likes || 0 %>)
                  </button>
                </form>

                <% if (locals.user) { %>
                  <% const isSaved = savedBlogIds.includes(blog._id.toString()); %>
                  <form action="/blog/<%= blog._id %>/save" method="POST" class="d-inline">
                    <button 
                      type="submit" 
                      class="btn <%= isSaved ? 'btn-success' : 'btn-outline-primary' %>"
                      title="<%= isSaved ? 'Unsave blog' : 'Save blog' %>"
                    >
                      <%= isSaved ? 'üîñ Saved' : 'üîñ Save' %>
                    </button>
                  </form>
                <% } else { %>
                  <a href="/user/signin" class="btn btn-outline-secondary">
                    üîñ Save
                  </a>
                <% } %>
              </div>
            </div>
          </div>
        <% }) %>
      </div>
    </div>

    <!-- Pagination -->
    <div class="container mt-5 d-flex justify-content-center">
      <nav>
        <ul class="pagination">
          <li class="page-item disabled">
            <span class="page-link">
              Previous
            
            </span>
          </li>
          <li class="page-item disabled">
            <span class="page-link">
              Next
             
            </span>
          </li>
        </ul>
      </nav>
    </div>

    <%- include("partials/script.ejs") %>
  </body>
</html>
