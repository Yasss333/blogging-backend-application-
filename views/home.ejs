<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include("partials/header.ejs") %>

    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Blog App</title>

    <style>
      /* Blog Card */
      .blog-card-img {
        height: 200px;
        object-fit: cover;
      }

      .blog-card {
        border-radius: 12px;
        overflow: hidden;
        box-shadow: 0 6px 18px rgba(0, 0, 0, 0.12);
        transition: transform 0.25s ease, box-shadow 0.25s ease;
        position: relative;
        background: #fff;
      }

      .blog-card:hover {
        transform: translateY(-4px);
        box-shadow: 0 10px 26px rgba(0, 0, 0, 0.18);
      }

      .blog-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
        gap: 26px;
        margin-top: 30px;
      }

      /* Meta Info */
      .blog-meta {
        font-size: 0.85rem;
        color: #6c757d;
        display: flex;
        justify-content: space-between;
        margin-bottom: 8px;
      }

      /* Future Feature Labels */
      .future-feature {
        font-size: 0.75rem;
        color: #adb5bd;
      }

      /* Badge */
      .badge-featured {
        position: absolute;
        top: 12px;
        left: 12px;
        background: #0d6efd;
        color: #fff;
        font-size: 0.75rem;
        padding: 4px 8px;
        border-radius: 6px;
      }
    </style>
  </head>

  <body>
    
    <%- include("partials/navbar.ejs") %>
       
    <!-- Top Controls -->
 <div class="d-flex justify-content-between align-items-center flex-wrap">
  <div>
    <h2 class="fw-bold mb-5">Latest Blogs</h2>
    <p class="text-muted mt-1 mb-0">
      Discover articles from the community
    </p>
  </div>

  <div class="d-flex gap-2 align-items-center">
    <% if (1) { %>
      <a
        href="/blog/add-new"
        class="btn btn-primary"
        style="background: linear-gradient(135deg, #bc351d, #6610f2); border: none;"
      >
         Create Blog
      </a>
    <% } %>

    <button class="btn btn-outline-secondary btn-sm" disabled>
      Filter
    </button>

    <button class="btn btn-outline-secondary btn-sm" disabled>
      Sort
    </button>
  </div>
</div>


    <!-- Blog Grid -->
    <div class="container">
      <div class="blog-grid">
        <% blog.forEach((blog) => { %>
          <div class="card blog-card">

            <!-- Featured Badge -->
            <span class="badge-featured">
              Top-Rated
              <span class="future-feature">(Next )</span>
            </span>

            <img
              src="<%= blog.coverImage %>"
              alt="Blog Image"
              class="blog-card-img"
            />

            <div class="card-body">
              <div class="blog-meta">
                <span>
                  By <strong><%= blog.createdBY?.fullname  || "Author" %></strong>
                </span>
                <span>
                  <%= Math.ceil(blog.body.length/1000) %> min read blog
                </span>
              </div>

              <h5 class="card-title mb-2">
                <%= blog.title %>
              </h5>
                
              <p class="text-muted small mb-3">
                    <%= blog.body.split(".").slice(0,1).join(".") %>...
              </p>

              <div class="d-flex gap-2">
                <a
                  href="/blog/<%= blog._id %>"
                  class="btn btn-primary w-100"
                >
                  Read More
                </a>
<form action="/blog/<%= blog._id %>/like" method="POST">
  <button class="btn btn-danger">
    â™¥ Like (<%= blog.likes %>)
  </button>
</form>


                <button class="btn btn-outline-secondary" disabled>
                  ðŸ”–
                  <span class="future-feature">(Save)</span>
                </button>
              </div>
            </div>
          </div>
        <% }) %>
      </div>
    </div>

    <!-- Pagination -->
    <div class="container mt-5 d-flex justify-content-center">
      <nav>
        <ul class="pagination">
          <li class="page-item disabled">
            <span class="page-link">
              Previous
            
            </span>
          </li>
          <li class="page-item disabled">
            <span class="page-link">
              Next
             
            </span>
          </li>
        </ul>
      </nav>
    </div>

    <%- include("partials/script.ejs") %>
  </body>
</html>
